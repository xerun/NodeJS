<div class="row">
    <div class="col-md-12">
        <h4>
            Departments
            <a href="/departments/add" class="btn btn-primary float-right"><i class="far fa-plus-square"></i> Add Department</a>
        </h4>
        <hr />
        <p>
            <table id="myTable" class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Department Number</th>
                        <th>Department Name</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each departments}}
                    <tr>
                        <td><a href="/department/{{this.departmentId}}" class="hvr-underline-from-left">{{this.departmentId}}</a></td>                        
                        <td><a href="/employees?department={{this.departmentId}}" class="hvr-underline-from-left">{{this.departmentName}}</a></td>    
                        <td align="right">
                            <a href="department/{{this.departmentId}}" class="btn btn-light hvr-bounce-to-right" title="Edit"><i class="far fa-edit"></i></a>
                            <a href="departments/delete/{{this.departmentId}}" class="btn btn-light confirmation hvr-bounce-to-left" title="Delete"><i class="far fa-trash-alt"></i></a>
                        </td>                    
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </p>
    </div>
    <div class="col-md-12 text-center">
        <strong>{{message}}</strong>
    </div>
</div>