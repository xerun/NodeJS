<div class="row">
    <div class="col-md-12">       
        <h4>
            Employees
            <a href="/employees/add" class="btn btn-primary float-right"><i class="far fa-plus-square"></i> Add Employee</a>
        </h4>
        <hr />
        <p>
            <table id="myTable" class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Employee Num</th>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Address</th>
                        <th>Manager ID</th>
                        <th>Status</th>     
                        <th>Dpt.</th>                        
                        <th>Hired On</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each employees}}
                    <tr>
                        <td>{{this.employeeNum}}</td>                        
                        <td><a href="/employee/{{this.employeeNum}}" class="hvr-underline-from-left">{{this.firstName}} {{this.lastName}}</a></td>
                        <td><a href="mailto:{{this.email}}" class="hvr-underline-from-left">{{this.email}}</a></td>
                        <td>{{this.addressStreet}}, {{this.addressCity}}, {{this.addressState}}, {{this.addressPostal}}</td>
                        <td>{{this.employeeManagerNum}}</td>
                        <td>{{this.status}}</td>
                        <td><a href="/employees?department={{this.department}}">{{this.department}}</a></td>
                        <td>{{this.hireDate}}</td>
                        <td align="right">
                            <div style="width:100px">
                                <a href="employee/{{this.employeeNum}}" class="btn btn-light hvr-bounce-to-right" title="Edit"><i class="far fa-edit"></i></a>
                                <a href="employees/delete/{{this.employeeNum}}" class="btn btn-light confirmation hvr-bounce-to-left" title="Delete"><i class="far fa-trash-alt"></i></a>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </p>
    </div>
    <div class="col-md-12 text-center">
        <strong>{{message}}</strong>
    </div>
</div>